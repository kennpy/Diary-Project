<p id="notice"><%= notice %></p>

<h1>Diaries</h1>
<style>
.table {
   border: 5px solid red;
}
</style>

<h1>Welcome, this is the home page</h1>  
  
<button type="button" 
        class="btn btn-lg btn-danger" 
        data-bs-toggle="popover" 
        title="Popover title" 
        data-bs-content="Amazing content, right ?">
        Click to toggle popover
</button>  

<table class="table">
  <thead>
    <tr>
      <th>Tite</th>
      <th>Summary</th>
      <th>Description</th>
      <th>Importance</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.tite %></td>
        <td><%= diary.summary %></td>
        <td><%= diary.description %></td>
        <td><%= diary.importance %></td>
        <td><%= diary.date %></td>
        <td><%= link_to 'Show', diary %></td>
        <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
        <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diary', new_diary_path %>
